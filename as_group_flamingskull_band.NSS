// This is the main function, which is what the spawn system runs when this
// spawn group is spawned.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// 1 Orog boss, 1 Nessian Warhound, 1-2 sergeants, 1-3 low-CR Orogs, 0-2 invisible imps, 0-2 Hellhounds
void main() {
	ACR_SpawnObject(A010_CRE_OUTSIDER_NESSIANWARHOUND, OBJECT_TYPE_CREATURE);
	
	if(Random(1))
		ACR_SpawnObject(A010_CRE_CWBAATEZU_OROG_WRK8, OBJECT_TYPE_CREATURE);
		else ACR_SpawnObject(A010_CRE_CWBAATEZU_OROG_SOR8, OBJECT_TYPE_CREATURE);
	
	SpawnRandomNumber(1, 2, A010_CRE_CWBAATEZU_OROG_BAR2FTR2, OBJECT_TYPE_CREATURE);

	int nOrogs = 1 + Random(3);
	int i;
	for(i=0; i<nOrogs; i++) {
		ACR_SpawnObject(GetLowCROrog(), OBJECT_TYPE_CREATURE);
	}
	
	int nImps = Random(3);
	for(i=0; i<nImps; i++) {
		SpawnInvisibleImp();
	}
	
	SpawnRandomNumber(0, 2, A010_CRE_OUTSIDER_HELLHOUND, OBJECT_TYPE_CREATURE);
}