////////////////////////////////////////////////////////////////////////////////
// Includes ////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// This line is required on all spawn group scripts.
#include "acr_spawn_i"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// This is the main function, which is what the spawn system runs when this
// spawn group is spawned.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
object oChest;
object oTrap;
object oCheckTrigger;
object o;

int nRand;


switch(Random(5)) {
			// 60%
			case 0:
			case 1:
			case 2:
	            oCheckTrigger = GetNearestObjectByTag("phat_lewt_trigger", OBJECT_SELF, 1);
				
				if (GetDistanceBetween(oCheckTrigger, OBJECT_SELF) > 10.0) {
					oCheckTrigger = OBJECT_INVALID;
					o = GetArea(OBJECT_SELF);
					WriteTimestampedLogEntry("phat_lewt: Error, no trigger for loot in "+GetName(o) + " (" + GetTag(o) + ")");
					return;
				}
					
				SetLocalInt(oCheckTrigger, "PL_SPAWNABLE", 1);
				break;
				
			case 3:
			case 4: 
				
				nRand = Random(100);

				// 10%
				if (nRand < 25) {
			            ACR_SpawnObject("010_herb_corpse", OBJECT_TYPE_PLACEABLE);
				}
				// 10%
				else if (nRand < 50) {
					ACR_SpawnObject("010_herb_spell1", OBJECT_TYPE_PLACEABLE);
				}
				// 10%
				else if (nRand < 75) {
					ACR_SpawnObject("010_herb_shroom2", OBJECT_TYPE_PLACEABLE);
				}
				// 10%
				else {
					ACR_SpawnObject("010_herb_shroom1", OBJECT_TYPE_PLACEABLE);
				}
				break;

	}
 
	// 20%
	if (!Random(5))
				ACR_DestroySpawnPoint(OBJECT_SELF);

}
