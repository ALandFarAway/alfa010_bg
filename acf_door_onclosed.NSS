////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
	object o;
	int i;
    ACR_DoorOnClose();
	
	o = GetLastClosedBy();
	i = GetLocalInt(o,"010_door_align");
	
	if (i > 7) {
		i = 0;
		AdjustAlignment(o,ALIGNMENT_LAWFUL,1);
		WriteTimestampedLogEntry("DOOR_ALIGN: +1 Lawful for " + GetName(o));
	}
	
	SetLocalInt(o,"010_door_align", i+1);
}